<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/agro_vision"
        android:label="@string/app_name"
        android:roundIcon="@drawable/agro_vision"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgroVision"
        tools:targetApi="31">
        <activity
            android:name=".Activity.FertilizerPredictionActivity"
            android:theme="@style/AboveAppBarColourGreen"
            android:exported="true" >
        </activity>
        <activity
            android:name=".Activity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.IntroActivity"
            android:exported="true"
            android:theme="@style/AboveAppBarColourGrey"></activity>
        <activity
            android:name=".Activity.WalkThroughScreen"
            android:exported="true"
            android:theme="@style/AboveAppBarColourWhite" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:theme="@style/AboveAppBarColourGreen">
        </activity>
        <activity
            android:name=".Activity.SplashScreen"
            android:exported="true"
            android:theme="@style/AboveAppBarColourWhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>